<?xml version="1.0" encoding="UTF-8"?>
<TEI xmlns="http://www.tei-c.org/ns/1.0" xml:id="N001000">
    <teiHeader>
      <% render :partial => 'entities/tei_file_desc', :locals => { :entity => entity} %>
        <profileDesc>
            <textClass>
            <keywords>
                <term type="type">Person</term>
            </keywords>
        </textClass>
        <particDesc>
                <person xml:id="<%= entity.xml_id%>">
                    <persName>
                      <%= entity.name %>
                      <% if entity.disambiguator %>
                        (<%= entity.disambiguator %>)
                      <% end %>
                    </persName>
                    <% unless entity.birth_date.blank? %>
                      <birth when="<%= entity.birth_date %>"><% format_date(entity.birth_date) %></birth>
                    <% end %>
                    <% unless entity.death_date.blank? %>
                      <death when="<%= entity.death_date %>"><% format_date(entity.death_date) %></death>
                    <% end %>
                    <% if entity.race_descriptions.present? %>
                      <% entity.race_descriptions.each do |race_description| %>
                        <trait type="race" subtype="<%= race_description.race_description %>"/>
                      <% end %>
                    <% end %>
                    <% unless entity.gender.blank? %>
                      <trait type="gender" subtype="<%= Entity::Gender.tei_type(entity.gender) %>">
                    <% end %>
                </person> 
        </particDesc>    
        </profileDesc>
    </teiHeader>
    <%= render :partial => 'entities/tei_text', :locals => { :entity => entity } %>
</TEI>