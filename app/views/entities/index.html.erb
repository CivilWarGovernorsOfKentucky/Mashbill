<h1>Listing entities</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Entity type</th>
      <th>Birth date</th>
      <th>Death date</th>
      <th>Biography</th>
      <th>Bibliography</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @entities.each do |entity| %>
      <tr>
        <td><%= entity.name %></td>
        <td><%= entity.entity_type %></td>
        <td><%= entity.gender %></td>
        <td><%= entity.birth_date %></td>
        <td><%= entity.death_date %></td>
        <td><%= entity.biography %></td>
        <td><%= entity.bibliography %></td>
        <td><%= entity.user.email %></td>
        <td><%= link_to 'Show', entity %></td>
        <td><%= link_to 'Edit', edit_entity_path(entity) %></td>
        <td><%= link_to 'Destroy', entity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

