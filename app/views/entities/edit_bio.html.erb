<h1>Editing Biography for <%=@entity.name%></h1>

<%= form_for(@entity) do |f| %>
  <% if @entity.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@entity.errors.count, "error") %> prohibited this entity from being saved:</h2>

      <ul>
      <% @entity.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

 <div class="field">
    <%= f.label :biography %><br>
    <%= f.text_area(:biography, size: "80x20") %>
  </div>
<p>The biography field support markdown syntax.  You can learn more about markdown at <%= link_to "The Programming Historian", "http://programminghistorian.org/lessons/getting-started-with-markdown" , target: :_blank %>.</p>
   <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Back', entity_path(@entity) %>
