<?xml version="1.0" encoding="UTF-8"?>
<TEI xmlns="http://www.tei-c.org/ns/1.0" xml:id="<%= entity.ref_id %>">
    <teiHeader>
      <%= render :partial => 'entities/tei_file_desc', :locals => { :entity => entity } %>
        <profileDesc>
            <textClass>
                <keywords>
                    <term type="type">Place</term>
                </keywords>
            </textClass>
            <particDesc>
                <place xml:id="<%= entity.xml_id%>">
                    <placeName>
                        <location>
                            <% if entity.lat %>
                              <geo><%= entity.lat %> <%= entity.long %></geo>
                            <% end %>
                            <settlement><%= entity.name %></settlement>
                        </location>
                    </placeName>
                </place> 
            </particDesc>    
        </profileDesc>
    </teiHeader>
    <%= render :partial => 'entities/tei_text', :locals => { :entity => entity } %>
</TEI>